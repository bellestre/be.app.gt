@model Models.gra.Tesis 
<section class="content-header">
    <h1>
        Tesis
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Actualizar Tesis</h3>
        </div>
        <form class="form-horizontal" method="post" action="/Tesis/Update">           
                <div class="box-body">
                    <div class="form-group">
                        <label for="" class="col-sm-2 control-label">Codigo</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Codigo" value="@Model.Codigo">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-sm-2 control-label">Tema</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Tema" placeholder="Tema" value="@Model.Tema">
                        </div>
                    </div>

                    <input type="hidden" name="Id" value="@Model.Id" />
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="button" class="btn btn-default">Cancelar</button>
                    <button type="submit" class="btn btn-info pull-right">Actualizar</button>
                </div>
                <!-- /.box-footer -->
            
        </form>
    </div>
    <!-- /.box -->
</section>

