@model List<Models.gra.RamaInvestigacion>

<section class="content-header">
    <h1>
        Ramas
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active">Ramas</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Gestionar ramas</h3>
                </div>
                
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>                               
                                <th>Nombre de Rama</th>                               
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>                                  
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td><button type="button" class="btn btn-primary btn-xs" href="#"><i class="fa fa-pencil-square-o"></i></button> | <button type="button" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></button></td>
                                </tr>
                            }
                    </table>

                    <div class="row no-print">
                        <div class="col-xs-12">
                            <a href="/Tesis/Print" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Imprimir</a>
                            <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">
                                <i class="fa fa-download"></i> Generar PDF
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- REQUIRED JS SCRIPTS -->
<!-- jQuery 3 -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- page script -->
