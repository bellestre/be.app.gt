        if (r == true) {
           $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "Rama")',
                data: {
                    id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        var baseUrl="/Index";
                        window.location.reload();
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });

        }

     }
</script>